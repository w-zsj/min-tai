{
	"pages": [
		{
			"path": "pages/home/index",
			"style": {
				"navigationBarTitleText": "首页",
				"onReachBottomDistance": 50,
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/catetory/index",
			"style": {
				"navigationBarTitleText": "分类",
				"disableScroll": true
			}
		},
		{
			"path": "pages/mall/index",
			"style": {
				"navigationBarTitleText": "购物车",
				"onReachBottomDistance": 50
			}
		},
		{
			"path": "pages/mine/index",
			"style": {
				"navigationBarTitleText": "我的",
				"navigationBarTextStyle": "white",
				"navigationBarBackgroundColor": "#EC0D0D"
			}
		}
	],
	"tabBar": {
		"backgroundColor": "#FFFFFF",
		"borderStyle": "black",
		"selectedColor": "#ec0d0d",
		"color": "#CCC9C9",
		"list": [
			{
				"pagePath": "pages/home/index",
				"iconPath": "/static/images/nav_home.png",
				"selectedIconPath": "/static/images/nav_selected_home.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/catetory/index",
				"iconPath": "/static/images/nav_catetory.png",
				"selectedIconPath": "/static/images/nav_selected_catetory.png",
				"text": "分类"
			},
			{
				"pagePath": "pages/mall/index",
				"iconPath": "/static/images/nav_car.png",
				"selectedIconPath": "/static/images/nav_selected_car.png",
				"text": "购物车"
			},
			{
				"pagePath": "pages/mine/index",
				"iconPath": "/static/images/nav_mine.png",
				"selectedIconPath": "/static/images/nav_selected_mine.png",
				"text": "我的"
			}
		]
	},
	"preloadRule": {
		"pages/home/index": {
			"packages": [
				"__APP__"
			]
		}
	},
	"subPackages": [
		{
			"root": "packPages",
			"pages": [
				{
					"path": "account-management/index",
					"style": {
						"navigationBarTitleText": "账户管理"
					}
				},
				{
					"path": "search-history/index",
					"style": {
						"navigationBarTitleText": "搜索"
					}
				},
				{
					"path": "search-result/index",
					"style": {
						"navigationBarTitleText": "搜索结果"
					}
				},
				{
					"path": "goods-detail/index",
					"style": {
						"navigationBarTitleText": "商品详情"
					}
				},
				{
					"path": "order-check/index",
					"style": {
						"navigationBarTitleText": "确认订单"
					}
				},
				{
					"path": "address-list/index",
					"style": {
						"navigationBarTitleText": "收货地址"
					}
				},
				{
					"path": "address/index",
					"style": {
						"navigationBarTitleText": "添加收货地址"
					}
				},
				{
					"path": "order-list/index",
					"style": {
						"navigationBarTitleText": "订单列表",
						"onReachBottomDistance": 50,
						"backgroundColor": "#f6f6f6",
						"enablePullDownRefresh": true
					}
				},
				{
					"path": "order-detail/index",
					"style": {
						"navigationBarTitleText": "订单详情"
					}
				},
				{
					"path": "webview/index",
					"style": {
						"navigationBarTitleText": "泰嗨乐"
					}
				},
				{
					"path": "payment-voucher/index",
					"style": {
						"navigationBarTitleText": "支付凭证"
					}
				}
			]
		}
	],
	"networkTimeout": {
		"request": 8000,
		"connectSocket": 30000,
		"uploadFile": 30000,
		"downloadFile": 30000
	},
	"style": "v2",
	"sitemapLocation": "sitemap.json",
	"easycom": {
		"autoscan": true,
		"custom": {
			"authority-phone-modal": "@/components/authority-phone-modal/authority-phone-modal",
			"uni-easyinput": "@/components/uni-easyinput",
			"uni-icons": "@/components/uni-icons/uni-icons",
			"^g-(.*)": "@/components/g-$1.vue"
		}
	},
	"globalStyle": {
		"backgroundTextStyle": "light",
		"navigationBarBackgroundColor": "#fff",
		"navigationBarTitleText": "泰嗨",
		"navigationBarTextStyle": "black",
		"backgroundColor": "#f6f6f6"
	}
}